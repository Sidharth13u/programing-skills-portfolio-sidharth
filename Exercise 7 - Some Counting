#Write a loop that counts up from 0 to 50 in increments of 1.
print("Loop 1: Counting up from 0 to 50")
for i in range(0, 51):  # range includes 0 and excludes 51
    print(i)

#Write a loop that counts down from 50 to 0 in decrements of 1.
print ('Loop 1: Counting down from 50 to 0')
for i in range (50,-1,-1):
    print(i)


#Write a loop that counts up from 30 to 50 in increments of 1.
print('Loop 3: counting up from 30 to 50')
for i in range (30,51,):
    print(i)
#Write a loop that counts down from 50 to 10 in decrements of 2.
print('Loop 4 : counting down from 50 to 10 ')
for r in range (50,9,-2):
    print(r)

#Write a loop that counts up from 100 to 200 in increments of 5. 
print("Loop 1: Counting up from 100 to 200")
for i in range(100, 201,5):  # range includes 0 and excludes 51
    print(i)